<section {{ wrapper_attr }}>
    <div class="container">
        {% if fields.title %}
            <h2 class="unsplash-slider__title">{{ fields.title }}</h2>
        {% endif %}
        {% if fields.description %}
            <p class="unsplash-slider__description">{{ fields.description }}</p>
        {% endif %}
        {% if images %}
            <div class="unsplash-slider__slider">
                <div class="unsplash-slider__swiper-container swiper-container">
                    <div class="swiper-wrapper">
                        {% for image in images %}
                            {% if image.url %}
                                <div class="unsplash-slider__slide swiper-slide">
                                    <img src="{{ image.url }}"{% if image.alt %} alt="{{ image.alt }}"{% endif%} />
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="unsplash-slider__navigation">
                        <div class="swiper-button-prev">

                        </div>
                        <div class="swiper-button-next">

                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</section>